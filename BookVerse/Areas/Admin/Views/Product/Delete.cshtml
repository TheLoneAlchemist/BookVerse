@model Product




<div>
	<form method="post">
		<input asp-for="Id" hidden/>
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="text-info"> Delete Product</h2>
				<hr />
			</div>
			<div class="mb-3 row">
				<label asp-for="Title" class="p-0"></label>
				<input asp-for="Title" class="form-control" readonly />
			</div>
			<div class="mb-3 row">
				<label asp-for="Description" class="p-0"></label>
				<textarea asp-for="Description" class="form-control" readonly ></textarea>
			</div>
			<div class="mb-3 row">
				<label class="p-0" asp-for="Author"></label>
				<input asp-for="Author" class="form-control" disabled />
			</div>
			<div class="mb-3 row">
				<label class="p-0" asp-for="ISBN"></label>
				<input asp-for="ISBN" class="form-control" disabled/>
			</div>
			<div class="mb-3 row">
				<label class="p-0" asp-for="ListPrice"></label>
				<input asp-for="ListPrice" class="form-control" disabled/>
			</div>

			<div class="row">
				<div class="col-6 col-md-3">
					<button type="submit" class="btn btn-outline-danger">Delete</button>
				</div>
				<div class="col-6 col-md-3">
					<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
				</div>

			</div>
		</div>
	</form>
</div>



