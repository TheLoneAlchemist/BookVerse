@model OrderVM

@{
    ViewData["Title"] = "Payment Options";
}



<div class="container-fluid mt-2 border bg-body-tertiary shadow m-5 p-3">

<div class="d-flex align-content-center justify-content-center p-4">
    <form asp-action="PaymentOptions">


        <label asp-for="PaymentOption" class="text-capitalize text-info fs-2 fw-bold "></label>
        <div class="fs-4 fw-semibold text-opacity-75 text-body-tertiary">
            @foreach (var item in Model.PaymentOption)
            {
                <div class="form-check">
                    <input asp-for="PaymentOption" type="radio" value="@item" required/> @item
                </div>
            }
        </div>
        <div class="mt-3">
            <input asp-for="CheckoutId" hidden />
            <span  class="fw-bold fs-3"> Payment Amount:  </span>
            <span class="fw-bold fs-3">@Model.TotalPrice</span>
        </div>
        <input type="submit" value="Confirm Order" class="btn btn-success mt-3" />
    </form>
</div>
</div>