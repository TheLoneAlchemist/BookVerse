    @model Product
@*<link href="~/css/productdetails.css" rel="stylesheet" />*@



<div class="container d-flex align-items-center justify-content-center h-100">
    <div class="col-lg-8 border p-3 main-section bg-white">
        <div class="row hedding m-0 pl-3 pt-0 pb-3">
            <div class="col-8">
                Category: 
            @Model.Category.Name
            </div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-outline-primary w-100">Back to Home</a>
            </div>
        </div>


        

        <div class="row m-0">
            <div class="col-sm-6 col-sm-4 left-side-product-box pb-3">


                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src=@Model.Image class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="@Model.Image" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src=@Model.Image class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>


            </div>
            <div class="col-sm-6">
                <div class="right-side-pro-detail border p-3 m-0">
                    <div class="row">   
                        <div class="col-12">
                            <span>Who What Wear</span>
                            <p class="m-0 p-0">@Model.Title</p>
                        </div>
                        <div class="col-12">
                            <div class="m-0 p-0 price-pro"> <span class="fs-3"> @Model.Price.ToString("c") </span> <span class="text-opacity-25 text-body-tertiary text-decoration-line-through">@Model.ListPrice.ToString("c") </span> </div>
                            <hr class="p-0 m-0">
                        </div>
                        <div class="col-12 pt-2">
                            <h5>Product Detail</h5>
                            <div>
                                @Html.Raw(Model.Description)
                            </div>
                            <hr class="m-0 pt-2 mt-2">
                        </div>
                        <div class="col-lg-12">
                            <p class="tag-section"><strong>Author : </strong>@Model.Author</p>
                        </div>
                        <div class="col-lg-12">
                            <p>Catgory: @Model.Category</p>
                        </div>
                        <div class="col-lg-12">
                            <input hidden value="@Model.Id" id="productid" />
                            <h6>Quantity :</h6>
                            <input type="number" class="form-control text-center w-100" value="1" id="quantity">
                        </div>
                        <div class="col-lg-12 mt-3">
                            <div class="row">
                                <div class="col-lg-6 pb-2">
                                    <input hidden value="@Model.Id" id="productId" />
                                    <button id="addtocart" class="btn btn-danger w-100">Add To Cart</button>
                                </div>
                                <div class="col-lg-6">
                                    <button  class="btn btn-success w-100" id="Buy">Buy Now</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <hr />

        <div class="row">
            <div class="col-lg-12 text-center pt-3">
                <h4>More Product</h4>
            </div>
        </div>
        <div class="row mt-3 p-0 text-center pro-box-section">
            <div class="col-lg-3 pb-2">
                <div class="pro-box border p-0 m-0">
                    <img src="@Model.Image" class="d-block w-100" >
                </div>
            </div>
            <div class="col-lg-3 pb-2">
                <div class="pro-box border p-0 m-0">
                    <img src=@Model.Image class="d-block w-100">
                </div>
            </div>
            <div class="col-lg-3 pb-2">
                <div class="pro-box border p-0 m-0">
                    <img src=@Model.Image class="d-block w-100">
                </div>
            </div>
            <div class="col-lg-3 pb-2">
                <div class="pro-box border p-0 m-0">
                    <img src=@Model.Image class="d-block w-100">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/js/Cart/cart.js"></script>
}