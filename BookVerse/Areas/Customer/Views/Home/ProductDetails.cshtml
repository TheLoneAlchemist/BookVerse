    @model Product
<link href="~/css/productdetails.css" rel="stylesheet" />



<div class="container">
    <div class="col-lg-8 border p-3 main-section bg-white">
        <div class="row hedding m-0 pl-3 pt-0 pb-3">
            <div class="col-10">

            @Model.Category.Name
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-outline-primary">Back to Home</a>
            </div>
        </div>

        <div class="row m-0">
            <div class="col-lg-4 left-side-product-box pb-3">
                <img src=@Model.Image class="border p-3">
                <span class="sub-img">
                    <img src=@Model.Image class="border p-2">
                    <img src=@Model.Image class="border p-2">
                    <img src=@Model.Image class="border p-2">
                </span>
            </div>
            <div class="col-lg-8">
                <div class="right-side-pro-detail border p-3 m-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <span>Who What Wear</span>
                            <p class="m-0 p-0">@Model.Title</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="m-0 p-0 price-pro">@Model.ListPrice.ToString("c")</p>
                            <hr class="p-0 m-0">
                        </div>
                        <div class="col-lg-12 pt-2">
                            <h5>Product Detail</h5>
                            <div>
                                @Html.Raw(Model.Description)
                            </div>
                            <hr class="m-0 pt-2 mt-2">
                        </div>
                        <div class="col-lg-12">
                            <p class="tag-section"><strong>Author : </strong>@Model.Author</p>
                        </div>
                        <div class="col-lg-12">
                            <h6>Quantity :</h6>
                            <input type="number" class="form-control text-center w-100" value="1">
                        </div>
                        <div class="col-lg-12 mt-3">
                            <div class="row">
                                <div class="col-lg-6 pb-2">
                                    <a href="#" class="btn btn-danger w-100">Add To Cart</a>
                                </div>
                                <div class="col-lg-6">
                                    <a href="#" class="btn btn-success w-100">Buy Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center pt-3">
                <h4>More Product</h4>
            </div>
        </div>
        <div class="row mt-3 p-0 text-center pro-box-section">
            <div class="col-lg-3 pb-2">
                <div class="pro-box border p-0 m-0">
                    <img src="#" >
                </div>
            </div>
            <div class="col-lg-3 pb-2">
                <div class="pro-box border p-0 m-0">
                    <img src=@Model.Image>
                </div>
            </div>
            <div class="col-lg-3 pb-2">
                <div class="pro-box border p-0 m-0">
                    <img src=@Model.Image>
                </div>
            </div>
            <div class="col-lg-3 pb-2">
                <div class="pro-box border p-0 m-0">
                    <img src=@Model.Image />
                </div>
            </div>
        </div>
    </div>
</div>

