@model CheckoutVM

@{
    ViewData["Title"] = "Checkout";
}


<h3>@ViewData["Title"]</h3>
<hr />
<div class="container">

    <div class=" shadow bg-body-tertiary rounded p-3 mb-5">
        <div class="p-5 g-2">

            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row gap-3">
                    <div class="col-6 col-sm-6">
                        <div class="p3 mb-3 fs-4"><span>Shipping Address</span></div>

                        <div class="form-group">
                            <label asp-for="Checkout.FirstName" class="form-label"></label>
                            <input asp-for="Checkout.FirstName" class="form-control" />
                            <span asp-validation-for="Checkout" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Checkout.LastName" class="form-label"></label>
                            <input asp-for="Checkout.LastName" class="form-control" />
                            <span asp-validation-for="Checkout.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Checkout.Phone" class="form-label"></label>
                            <input asp-for="Checkout.Phone" class="form-control" />
                            <span asp-validation-for="Checkout.Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address.Street" class="form-label"></label>
                            <input asp-for="Address.Street" class="form-control" />
                            <span asp-validation-for="Address.Street" class="text-danger"></span>

                        </div>
                        <div class="row">

                            <div class="form-group col-6">
                                <label asp-for="Address.City" class="form-label"></label>
                                <input asp-for="Address.City" class="form-control" />
                                <span asp-validation-for="Address.City" class="text-danger"></span>

                            </div>
                                <div class="form-group col-6">
                                    <label asp-for="Address.State" class="form-label"></label>
                                    <input asp-for="Address.State" class="form-control" />
                                    <span asp-validation-for="Address.State" class="text-danger"></span>


                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address.Country" class="form-label"></label>
                            <input asp-for="Address.Country" class="form-control" />
                            <span asp-validation-for="Address.Country" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address.ZipCode" class="form-label"></label>
                            <input asp-for="Address.ZipCode" class="form-control" />
                            <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="col-4 col-sm-5">

                        <div class="p-3 mb-2 fs-4"><span>Cart - - - </span><span class="text-success">Address - - - </span><span>Payment</span> </div>
                        <div class="form-group">
                            <label asp-for="Checkout.ShippingPrice" class="form-label"></label>
                            <input asp-for="Checkout.ShippingPrice" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="Checkout.CouponDiscount" class="form-label"></label>
                            <input asp-for="Checkout.CouponDiscount" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="Checkout.TotalPrice" class="form-label"></label>
                            <input asp-for="Checkout.TotalPrice" class="form-control" readonly />
                        </div>


                    </div>

                </div>

                <div class="row mt-3">
                    <div class="col-6 d-grid col-sm-6">
                        <button class="btn btn-success ">Save Address</button>
                    </div>
                    <div class="col-4 d-grid col-sm-5">
                        <button type="submit" class="btn btn-danger">Payment</button>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="/Customer/Cart">Back To Cart</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
